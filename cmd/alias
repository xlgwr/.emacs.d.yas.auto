. ~/.rvm/scripts/rvm
alias cls='clear'
alias lm='more '
alias updateget='sudo apt-get update && echo y | sudo apt-get upgrade && echo y | sudo apt-get dist-upgrade'
alias updatefast='sudo apt-fast update && echo y | sudo apt-fast upgrade && echo y | sudo apt-fast dist-upgrade'
alias npmc="npm --registry=https://registry.npm.taobao.org \
--cache=$HOME/.npm/.cache/cnpm \
--disturl=https://npm.taobao.org/dist \
--userconfig=$HOME/.cnpmrc"
