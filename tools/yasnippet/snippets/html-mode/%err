# -*- mode: snippet -*-
# name: <%= if @post.errors.any? %>
# key: %err
# --
<%= if {1:@post}.errors.any? %>
    <div id="errorExplanation">
     <h2>
         <%= pluralize({2:@post}.errors.count,"error") %>
	 prohibited this post from being saved:
     </h2>					       
     <ul>
         <% {3:@post}.errors.full_messages.each do |msg| %>
	  <li> <%= msg %></li>
	 <% end %>
     </ul>
     </div>
<% end %>
